<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE0E0"
    tools:context=".Home">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/headerLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/header"
      android:padding="10dp"
      app:layout_constraintTop_toTopOf="parent">

    <TextView

        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WareHouse"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:tint="@color/white"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@id/txt_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_background"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu">

      <EditText
          android:layout_width="0dp"
        android:layout_weight="1"
          android:layout_height="40dp"
        android:background="@null"
        android:hint="Search"/>

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
        android:src="@drawable/ic_baseline_search_24"/>

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:overScrollMode="never"
      android:scrollbars="none"
      android:layout_marginBottom="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/headerLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/addItems"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/white_background"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="15dp"
          app:layout_constraintDimensionRatio="H , 1:1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/add_customer"
          app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/add_items"
            android:layout_width="100dp"
            android:layout_height="100dp"
          android:src="@drawable/add_items"
          android:layout_margin="4dp"
          android:padding="8dp"
          android:contentDescription="@string/app_name"
            android:onClick="ShowAddPopup"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:text="Add Items"
          android:textSize="15sp"
          android:textColor="@color/black"
          android:textStyle="bold"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/add_customer"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/white_background"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="15dp"
          app:layout_constraintDimensionRatio="H,1:1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/addItems"
          app:layout_constraintTop_toTopOf="parent"
          >
        <ImageView
            android:id="@+id/addCustomer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add_customer"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_name"
            android:onClick="ShowAddCustomer"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Customer"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/view_item"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/white_background"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="15dp"
          app:layout_constraintDimensionRatio="H,1:1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/add_customer"
          app:layout_constraintTop_toBottomOf="@id/addItems"
          >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/view_items"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_name"
            android:onClick="View_Items"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Items"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/view_customer"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/white_background"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="15dp"
          app:layout_constraintDimensionRatio="H,1:1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/addItems"
          app:layout_constraintTop_toBottomOf="@id/add_customer"
          >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/view_customer"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_name"
            android:onClick="View_Customer"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Customer"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/edit_items"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/white_background"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="15dp"
          app:layout_constraintDimensionRatio="H,1:1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/add_customer"
          app:layout_constraintTop_toBottomOf="@id/view_item"
          >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/edit_users"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit User"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/edit_customer"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/white_background"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="15dp"
          app:layout_constraintDimensionRatio="H,1:1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/addItems"
          app:layout_constraintTop_toBottomOf="@id/view_customer"
          >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/delete_users"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete User"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>

      </LinearLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/card"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/card_layout"
          android:padding="20dp"
          app:layout_constraintEnd_toEndOf="@id/add_customer"
          app:layout_constraintStart_toStartOf="@id/edit_items"
          app:layout_constraintTop_toBottomOf="@id/edit_items"
          >
        <TextView
            android:id="@+id/cardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text="walmart !!!"
            android:textColor="@color/purple_500"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <ImageView
            android:id="@+id/card_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@id/cardText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardText"
            android:src="@drawable/ic_baseline_local_shipping_24"
            app:tint="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/card_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:text="@string/card_text"/>

      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/navigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:menu="@menu/menu"
      android:backgroundTint="@color/white"
      app:itemIconSize="40dp"
      app:labelVisibilityMode="unlabeled"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>